<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    <!-- Incluye Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

    <style>
        html, body {
            height: 100%; /* Asegura que html y body ocupen toda la altura del viewport */
            margin: 0; /* Elimina márgenes por defecto */
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Asegura que el body tenga al menos la altura del viewport */
            margin: 0;
            padding: 0;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            transition: background-image 1s ease-in-out; /* Transición suave entre imágenes */
        }

        .navbar {
            position: fixed; /* Fija la barra de navegación en la parte superior */
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Asegura que la barra de navegación esté por encima del contenido */
            background-color: #343a40; /* Color oscuro para la barra de navegación */
            color: white; /* Color blanco para el texto en la barra de navegación */
            margin-bottom: 0; /* Elimina el margen inferior de la barra de navegación */
        }

            .navbar .navbar-brand,
            .navbar .nav a {
                color: white !important; /* Asegura que los enlaces sean blancos */
            }

        .container.body-content {
            padding-top: 70px; /* Espacio superior para evitar que el contenido quede oculto detrás de la barra de navegación */
            flex: 1; /* Permite que el contenido principal ocupe el espacio disponible */
        }

        .jumbotron {
            background-color: rgba(255, 255, 255, 0.5); /* Fondo blanco con 50% de opacidad para el jumbotron */
            padding: 30px;
            border-radius: 5px;
            text-align: center; /* Centra el texto */
        }

            .jumbotron h1,
            .jumbotron p {
                color: #000; /* Color negro para el texto en el jumbotron */
            }

        footer {
            background-color: rgba(241, 241, 241, 0.5); /* Color gris claro con 50% de opacidad */
            padding: 10px 0; /* Espaciado del pie de página */
            text-align: center; /* Centra el texto del pie de página */
        }

            footer p {
                color: #000; /* Color negro para el texto del pie de página */
            }

        h2 {
            background-color: rgba(211, 211, 211, 0.5); /* Color gris claro con 50% de opacidad */
            padding: 10px; /* Espaciado interno del título */
            border-radius: 5px; /* Opcional: agrega bordes redondeados */
            color: #000; /* Color negro para el texto del título */
        }

        .row p {
            color: white; /* Color negro para los párrafos en la sección de experiencias */
        }

    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acerca de nosotros", "About", "Home", new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Destinos", "Destinos", "Home", new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p><strong>Tel:  316 2990207 | Redes: <a href="https://www.instagram.com/aerofeliz/">Instagram</a> - <a href="https://web.facebook.com/viajesaerofeliz/?_rdc=1&_rdr">Facebook</a>
             | Correo Electrónico: agenciadeviajesaerofeliz@gmail.com | Direccion: Cra. 1g #· 59 - 137, Comuna 5, Cali, Valle del Cauca</strong></p>
            <p>&copy; @DateTime.Now.Year - Viajes Aerofeliz</p>
        </footer>
    </div>

    <!-- Incluye jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Incluye Popper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <!-- Incluye Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <script>
        // JavaScript para animar el fondo
        const images = [
            'url(/Content/Images/Noche_De_Encanto.jpg)',
           
        ];

        let currentIndex = 0;
        const changeInterval = 10000; // Intervalo de cambio en milisegundos (1 minuto)

        function changeBackgroundImage() {
            currentIndex = (currentIndex + 1) % images.length;
            document.body.style.backgroundImage = images[currentIndex];
        }

        setInterval(changeBackgroundImage, changeInterval);

        // Establece la primera imagen de fondo al cargar
        document.body.style.backgroundImage = images[currentIndex];
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>






